<div class ="container">
<h1 class="text-center">Les matches</h1>


<table class ="table table-bordered shadow p-3 mb-5 bg-white rounded">
  
<thead>
    <tr class="text-center"> 
        <th scope="col">Date</th>
        <th scope="col">Statut</th>
        <th scope="col">Domicile</th>
        <th scope="col">Score</th>
        <th scope="col">Extérieur</th>
    </tr>
</thead>
<tbody style="text-align:center"> 

    <%@matchs["matches"].each do |m|%>
        <tr>
            <td><%=m['utcDate'].split("T")[0]%></td>
            <td><%=m["status"]%></td>
            <td class="match-table"><a href="/team/<%=m["homeTeam"]["id"]%>" class="text-dark font-weight-light"><%=m["homeTeam"]["name"]%></a></td>
            <td class="font-weight-bold d-flex" style="position: relative;">
            <div class="header">
              <span class="headerMiddle"><%=m["score"]["fullTime"]["homeTeam"]%> / <%=m["score"]["fullTime"]["awayTeam"]%></span>
            </div>
            </td>
            <td class="match-table"><a href="/team/<%=m["awayTeam"]["id"]%>" class="text-dark font-weight-light"><%=m["awayTeam"]["name"]%></a></td>
        </tr>
    <%end%>
 
</table>
