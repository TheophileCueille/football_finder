<div class ="container">
<h2>Les teams</h2>

<p id="adresse"></p>

<table class ="table table-bordered shadow p-3 mb-5 bg-white rounded">
<thead>
    <tr class ="text-center"> 
        <th scope="col">Equipes</th>
        <th scope="col">Nom officiel</th>
        <th scope="col">Fond√© en</th>
        <th scope="col">Tel</th>
        <th scope="col">Stade</th>
        <th scope="col"></th>

    </tr>
</thead>
<tbody>        
    <%@teams.each do |team|%>
        <tr>
            <td>
                <%=image_tag team["crestUrl"] , size: "45x45"%>
                <%=team["shortName"]%>
            </td>
            <td><%=team["name"]%></td>
            <td><%=team["founded"]%></td>
            <td><%=team["phone"]%></td>
            <td><%=team["venue"]%></td>
            <td><a href="/team/<%=team['id']%>" class="btn btn-primary">Voir le stade</a></td>
        </tr>
    <%end%>

</table>

</div>

