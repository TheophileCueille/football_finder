<div class ="container">
<br>
<h1 style="text-align:center">Teams</h1>
<br>

<p id="adresse"></p>

<table class ="table table-bordered shadow p-3 mb-5 bg-white rounded">
<thead>
    <tr class ="text-center"> 
        <th scope="col">Team</th>
        <th scope="col">Official Name</th>
        <th scope="col">Founded</th>
        <th scope="col">Phone</th>
        <th scope="col">Adress</th>
        <th scope="col">Stadium</th>

    </tr>
</thead>
<tbody style="text-align:center;vertical-align: baseline;">        
    <%@teams.each do |team|%>
        <tr>
            <td id="table-cell" style="text-align:left">
                <%=image_tag team["crestUrl"] , size: "45x45"%>
            </td>
            <td id="table-cell"><%=team["name"]%></td>
            <td id="table-cell"><%=team["founded"]%></td>
            <td id="table-cell"><%=team["phone"]%></td>
            <td id="table-cell"><%=team["address"]%></td>
            <td id="table-cell"><a href="/team/<%=team['id']%>" class="btn btn-primary">Voir le stade</a></td>
        </tr>
    <%end%>

</table>

</div>

<script>
var addresse_selected
var address = []
a = document.querySelectorAll(".btn.btn-primary")
a.forEach(x => {

    address.push(x.parentElement.parentElement.children[4].textContent) //tous les adresses
    x.addEventListener("click", function() {
            addresse_selected = x.parentElement.parentElement.children[4].textContent
            document.querySelector("#adresse").innerHTML = this.parentElement.parentElement.children[4].textContent
        }

    )
console.log(address)
console.log(addresse_selected)
})


    //x.parentElement.parentElement.children[4].textContent
</script>
