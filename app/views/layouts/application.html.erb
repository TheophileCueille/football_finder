    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item">
        <a class="nav-link" href="<%=teams_path%>">Teams</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%=match_path%>">Match List</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%=standing_path%>">Standings</a>
      </li>
      
    </ul>
  </div>
</nav>
