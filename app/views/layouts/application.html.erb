        <h5 class="font-weight-bold text-uppercase mt-3 mb-4">Liens</h5>

        <ul class="list-unstyled">
          <li>
            <a href="<%=teams_path%>">Equipes</a>
          </li>
          <li>
            <a href="<%=match_path%>">Calendrier-résultats</a>
          </li>
          <li>
            <a href="<%=standing_path%>">Classement</a>
          </li>
          <li>
            <a href="<%=orders_new_path%>">Faire un don</a>
          </li>
        </ul>

      </div>

      <!-- Grid column -->

    </div>
    <!-- Grid row -->

  </div>
