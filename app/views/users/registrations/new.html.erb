<div class ="container">
    <div class="row">
      <div class="col-md-5 mx-auto">
      <h2 class="text-center">S'inscrire</h2>
      <div class="form-group mt-4">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "" %>
          </div>

          <div class="field">
            <%= f.label :mot_de_passe %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractÃ¨res minimums )</em>
            <% end %><br />
            <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
          </div>

          <div class="field mb-3">
            <%= f.label :confirmation_du_mot_de_passe %><br />
            <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
          </div>

          <div class="actions">

            <%= f.submit "Sign up" ,class: "btn btn-success btn-block mb-3" %>
          </div>
        <% end %>
        <%= render "users/shared/links" %>
        </div>
    </div>
  </div>
</div>
