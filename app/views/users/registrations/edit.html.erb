<div class ="container">
    <div class="row">
      <div class="col-md-5 mx-auto">
      <h2 class="text-center">Edite ton profil</h2>
      <div class="form-group mt-4">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
                  <div class="field">
            <%= f.label :prénom %><br />
            <%= f.text_field :firstname, class:"form-control", autofocus: true, autocomplete: "firstname" %>
          </div>

            <div class="field mt-1">
            <%= f.label :nom %><br />
            <%= f.text_field :lastname, class:"form-control", autofocus: true, autocomplete: "lastname" %>
          </div>


          <div class="field mt-1">
            <%= f.label :adresse %><br />
            <%= f.text_field :adress, class:"form-control", autofocus: true, autocomplete: "adress" %>
          </div>

          <div class="field mt-1">
            <%= f.label :avatar %><br />
            <%= f.file_field :avatar, accept: "image/png, image/gif, image/jpeg"%>
          </div>
          ø
          <div class="field mt-1">
            <%= f.label :email %><br />
            <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "" %>
          </div>

          <div class="field mt-1">
            <%= f.label :changer_de_mot_de_passe %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractères min)</em>
            <% end %><br />
            <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
          </div>

          <div class="field mt-1">
            <%= f.label :confirmation_du_mot_de_passe %><br />
            <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
          </div>

          <div class="field mt-1 mb-3">
          <%= f.label :mot_de_passe_actuel %> <i>(Entrez votre mot de passe pour confirmer les changements)</i><br />
          <%= f.password_field :current_password, class:"form-control", autocomplete: "current-password" %>
           </div>
           <div class="actions">
            <%= f.submit "Editer" ,class: "btn btn-success btn-block mb-3"%>
            </div>
        <% end %>
        <h3>Supprimer mon compte</h3>

        <p>Pas content ?<%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Sûre de toi ?" }, method: :delete %></p>

        <%= link_to "Retour", :back %>
        </div>
    </div>
  </div>
</div>
