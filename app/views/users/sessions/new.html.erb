<div class ="container">
    <div class="row">
      <div class="col-md-5 mx-auto">
        <h2 class="text-center">Se Connecter</h2>
          <div class="form-group mt-4">
          
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :mot_de_passe %><br />
            <%= f.password_field :password,class:"form-control", autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :se_souvenir_de_moi %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Connecte toi" ,class: "btn btn-success btn-block mb-3" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
        </div>
      </div>
  </div>

</div>
